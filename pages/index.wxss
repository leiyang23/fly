/* pages/index.wxss */
page{
  height: 100%;
  background-color: #f1f0ed
}
.con{
  padding: 0 50rpx 0 50rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;  
}
.card{
  width: 300rpx;
  height: 200rpx;
  margin-top: 50rpx;
  background-color: #45b787;
  color: #f8f4ed;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: ease-in-out .5 all
}
.card:active{
  background-color: #c0c4c3
}